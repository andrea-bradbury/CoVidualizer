<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CoVidualizer.YourLocation">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" BackgroundColor="#fefaff">
            <Frame BackgroundColor="#f5daf0">
            <Grid Margin="1,40,1,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                  
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    
                   
                </Grid.RowDefinitions>

                <Button x:Name="buttonBack2" FontSize="Body" Text="Back" BorderWidth="1" BorderRadius="10" BorderColor="#632b6c" HeightRequest="40" TextColor="#fcc3a3" BackgroundColor="#270f36"  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="0" Clicked="buttonBack2_Clicked" />

                <Label x:Name="labelYourLocationTitle2" FontSize="Title" Text="Your Location" TextColor="#270f36" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" Grid.ColumnSpan="2" Grid.Row="1"/>

                <Label x:Name="labelTotalCases" FontSize="Medium" Text="Total Cases" TextColor="#270f36" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="3" Grid.Column="0" />
                <Label x:Name="labelTotalCasesAmount" FontSize="Body" Text="" TextColor="#270f36" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="4" Grid.Column="0" />

                <Label x:Name="labelTotalDeaths" FontSize="Medium" Text="Total Deaths" TextColor="#270f36" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="3" Grid.Column="1" />
                <Label x:Name="labelTotalDeathsAmount" FontSize="Body" Text="" TextColor="#270f36" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="4" Grid.Column="1" />

                <Label x:Name="labelTodaysCases" FontSize="Medium" Text="Today's Cases" TextColor="#c76b98" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="5" Grid.Column="0" />
                <Label x:Name="labelTodaysCasesAmount" FontSize="Body" Text="" TextColor="#c76b98" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="6" Grid.Column="0" />

                <Label x:Name="labelTodaysDeaths" FontSize="Medium" Text="Today's Deaths" TextColor="#c76b98" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="5" Grid.Column="1" />
                <Label x:Name="labelTodaysDeathsAmount" FontSize="Body" Text="" TextColor="#c76b98" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="6" Grid.Column="1" />

                <Label x:Name="labelRecoveryRate" FontSize="Medium" Text="Recovery Rate" TextColor="#f09f9c" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="7" Grid.Column="0" />
                <Label x:Name="labelRecoveryRateAmount" FontSize="Body" Text="" TextColor="#f09f9c" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="8" Grid.Column="0" />

                <Label x:Name="labelDeathRate" FontSize="Medium" Text="Death Rate" TextColor="#f09f9c" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="7" Grid.Column="1" />
                <Label x:Name="labelDeathRateAmount" FontSize="Body" Text="" TextColor="#f09f9c" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  Grid.Row="8" Grid.Column="1" />

                <Button x:Name="buttonSeeWorldHotSpots" FontSize="Body" Text="World Hot Spots + Low Spots" BorderWidth="1"  BorderRadius="10" BorderColor="#632b6c" TextColor="#fcc3a3" BackgroundColor="#270f36"  HeightRequest="40"  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Grid.ColumnSpan="2" Grid.Row="9" Clicked="buttonSeeWorldHotSpots_Clicked" />


            </Grid>
        </Frame>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
